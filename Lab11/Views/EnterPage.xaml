<Page x:Class="Lab11.Views.EnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab11.Views" xmlns:viewmodels="clr-namespace:Lab11.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:EnterViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnterPage">
    <Page.DataContext>
        <viewmodels:EnterViewModel/>
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ButtonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="#FFFFE2F5">
        <StackPanel Orientation="Vertical">
            <TextBlock 
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="20"
                Text="Вход"
                FontSize="30"
                />
            <TextBlock 
                Text="Логин"
                HorizontalAlignment="Center"
                Margin="10"
                FontSize="25"
                />
            <TextBox
                Width="200"
                FontSize="17"
                Text="{Binding Login}"
                Margin="10"
                />
            <TextBlock
                Text="Пароль"
                HorizontalAlignment="Center"
                Margin="10"
                FontSize="25"
                />
            <TextBox
                Width="200"
                FontSize="17"
                Text="{Binding Password}"
                Margin="10"
                />
            <Button
                Width="200"
                Content="Войти"
                Style="{StaticResource Btn_Style}"
                />
        </StackPanel>
    </Grid>
</Page>
